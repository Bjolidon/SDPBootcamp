<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/profile_picture_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_picture"
        app:layout_constraintBottom_toTopOf="@+id/nameEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/nameEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/SearchTextStyle"
        android:hint="@string/name_entry_hint"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture"
        android:autofillHints="name"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/descriptionEntry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="description"
        android:gravity="start|top"
        android:hint="@string/description_entry_hint"
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="8dp"
        style="@style/SearchTextStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEntry"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/authenticationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/sign_in_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionEntry" />

</androidx.constraintlayout.widget.ConstraintLayout>
