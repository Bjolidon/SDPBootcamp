<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.singleset.SingleSetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/singleSet_set_image"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:contentDescription="@string/image_of_the_card"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/singleSet_set_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/single_set_error_loading"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singleSet_set_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/single_set_code"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/singleSet_set_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/single_set_type"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/singleSet_set_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/single_set_release_date"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/singleSet_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/single_set_cards_number_in_possession"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
