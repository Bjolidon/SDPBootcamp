<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chats_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.Tarjetakuna.NoActionBar"
    tools:context=".ui.chat.ChatListFragment">

    <TextView
        android:id="@+id/chats_chats_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chats_my_chats"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chats_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
