<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        Customize your theme here.</style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/white_gold_light</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LargeTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_gold_light</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DescriptionStyleItalic">
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DescriptionStyleNormal">
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BrowserCardTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrowserCardDescriptionStyle">
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="BubbleStyle">
        <item name="android:background">@color/blue_med3</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white_gold_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="HomeButtonStyle" parent="ButtonStyle">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="DropDownStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/white_gold_light</item>
        <item name="android:editTextColor">@color/white_gold_light</item>
        <item name="android:textColorHint">@color/white_gold_light</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
