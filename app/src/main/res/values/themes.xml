<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bootcamp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryVariant">@color/blue_med1</item>
        <item name="colorOnPrimary">@color/blue_med3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_med3</item>
        <item name="colorSecondaryVariant">@color/blue_gray</item>
        <item name="colorOnSecondary">@color/blue_400</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/blue_med2</item>
    </style>

    <style name="Theme.Bootcamp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bootcamp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bootcamp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
