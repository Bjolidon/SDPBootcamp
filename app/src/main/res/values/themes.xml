<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tarjetakuna" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_400</item>
        <item name="colorPrimaryVariant">@color/blue_med1</item>
        <item name="colorOnPrimary">@color/white_gold_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_med3</item>
        <item name="colorSecondaryVariant">@color/blue_med2</item>
        <item name="colorOnSecondary">#1D244C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/blue_med2</item>
        <item name="android:textColorPrimary">@color/white_gold_light</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white_gold_light</item>
    </style>

    <style name="Theme.Tarjetakuna.NoActionBar" parent="Theme.Tarjetakuna">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tarjetakuna.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tarjetakuna.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
